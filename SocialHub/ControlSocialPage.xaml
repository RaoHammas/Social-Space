            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource ColorBrushWhite}" Margin="0 0 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
